<section class="content">
    <div class="content-main">
        <div class="content-name">
            Proker
        </div>
        <div class="content-page">
            <div class="option-page">
                <% if (status != '') { %>
                    <div class="alert alert-primary" role="alert">
                        <%= status %> 
                    </div>
                <% } %>
                <a href="/admin/proker/add_proker" class="add-btn">Add proker</a>
            </div>
            <div class="database-proker">
                <div class="database-proker-title">
                    <div class="proker-nama">nama_proker</div>
                    <div class="proker-tanggal">tanggal</div>
                    <div class="proker-lokasi">lokasi</div>
                    <div class="proker-deskripsi">deskripsi</div>
                    <div class="proker-waktu">waktu proker</div>
                    <div class="proker-penanggung-jawab">penanggung jawab</div>
                    <div class="proker-dokumentasi">dokumentasi</div>
                    <div class="proker-periode">periode</div>
                    <div class="edit-proker"></div>
                </div>
                <div class="database-proker-value-store">
                    <% for( let index = 0; index < database.length; index++ ) { %>
                    <div class="database-proker-value">
                        <div class="proker-nama"><%= database[index].nama_proker %></div>
                        <div class="proker-tanggal"><%= database[index].tanggal %></div>
                        <div class="proker-lokasi"><%= database[index].lokasi %></div>
                        <% if (database[index].deskripsi.length > 200) { %>
                        <% var lo = (database[index].deskripsi).toString().substring(0, 200) + "..."; %> 
                        <% } else { %>
                        <% var lo = (database[index].deskripsi) %>
                        <% } %> 
                        <div class="proker-deskripsi"><%= lo %></div>
                        <div class="proker-waktu"><%= database[index].tanggal %> </div>
                        <div class="proker-penanggung-jawab"><%= database[index].penanggungjawab %></div>
                        <div class="proker-dokumentasi"><%= database[index].dokumentasi %></div>
                        <div class="proker-periode"><%= database[index].nama_periode %></div>
                        <div class="edit-proker">
                            <a href="/admin/proker/hapus?id=<%= database[index].nama_proker %>"><i class="bi bi-trash"></i></a> <a href="/admin/proker/edit?id=<%= database[index].nama_proker %>"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>