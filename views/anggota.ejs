<section class="content">
    <div class="content-main">
        <div class="content-name">
            Anggota
        </div>
        <div class="content-page">
            <div class="option-page">
                <% if (status != '') { %>
                    <div class="alert alert-primary" role="alert">
                        <%= status %> 
                    </div>
                <% } %>
                <a href="/admin/anggota/add_anggota" class="add-btn">Add Anggota</a>
            </div>
            <div class="database-anggota">
                <div class="database-anggota-title">
                    <div class="anggota-nim">NIM</div>
                    <div class="anggota-nama">Nama</div>
                    <div class="anggota-tanggal-lahir">Tanggal Lahir</div>
                    <div class="anggota-prodi">Prodi</div>
                    <div class="anggota-periode">Periode</div>
                    <div class="anggota-jabatan">Jabatan</div>
                    <div class="anggota-nama-jabatan">Nama Jabatan</div>
                    <div class="anggota-foto">foto</div>
                    <div class="edit-anggota"></div>
                </div>
                <div class="database-anggota-value-store">
                    <% for( let index = 0; index < database.length; index++ ) { %>
                    <div class="database-anggota-value">
                        <div class="anggota-nim"><%= database[index].nim %></div>
                        <div class="anggota-nama"><%= database[index].nama %></div>
                        <div class="anggota-tanggal-lahir"><%= database[index].tanggal_lahir %></div>
                        <div class="anggota-prodi"><%= database[index].prodi %></div>
                        <div class="anggota-periode"><%= database[index].tahun %></div>
                        <div class="anggota-jabatan"><%= database[index].jabatan %> </div>
                        <div class="anggota-nama-jabatan"><%= database[index].nama_jabatan %> </div>
                        <div class="anggota-foto"><%= database[index].foto %> </div>
                        <div class="edit-anggota">
                            <a href="/admin/anggota/hapus?id=<%= database[index].nama %>"><i class="bi bi-trash"></i></a>
                            <a href="/admin/anggota/edit_anggota?id=<%= database[index].nama %>"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>